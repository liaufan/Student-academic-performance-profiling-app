<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".sign_up_activity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="username"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="password"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="email"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="grade"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpFirstName"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/white_border_curve_edittext"
                android:ems="10"
                android:fontFamily="@font/airbnb_cereal_light"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpLastName"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/white_border_curve_edittext"
                android:ems="10"
                android:fontFamily="@font/airbnb_cereal_light"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.449"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpUsername"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/white_border_curve_edittext"
                android:ems="10"
                android:fontFamily="@font/airbnb_cereal_light"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpPassword"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/white_border_curve_edittext"
                android:ems="10"
                android:fontFamily="@font/airbnb_cereal_light"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpEmail"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/white_border_curve_edittext"
                android:ems="10"
                android:fontFamily="@font/airbnb_cereal_light"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_marginTop="2dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/white_border_curve_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:entries="@array/grades_array"
                android:fontFamily="@font/airbnb_cereal_light"
                android:textAlignment="center"
                android:letterSpacing=".1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="first name"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/airbnb_cereal_bold"
        android:text="last name"
        android:textColor="#FED200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_curve_border_button"
        android:text="SIGN UP"
        android:textColor="#7B4C02"
        android:textSize="18sp"
        app:fontFamily="@font/fredoka_one_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6" />
</androidx.constraintlayout.widget.ConstraintLayout>